.move-area {
  height: 100rpx;
  margin: 20rpx;
  position: relative;
border-bottom: 1px dashed #b3b45b;
  width: calc(100% - 40rpx);
}
.move-view {
 width: calc(100% - 100rpx);
 height: 100rpx;
 line-height: 100rpx;
 position: absolute;
 left: 100rpx;
 top: 0;
 text-indent: 10rpx;
 z-index: 2;
 background-color: white;
}
image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.delete{
  width: 100rpx;
  height: 100rpx;
  background-color: red;
  color:white;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 1;
  line-height: 100rpx;
}