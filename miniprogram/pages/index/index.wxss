/* miniprogram/pages/index/index.wxss */
.index-swiper {
  margin: 20rpx;
  margin-top: 120rpx;
  border-radius: 10rpx;
  overflow: hidden;
  height: 300rpx;
}
.index-swiper image{
  width: 100%;
  border-radius: 10rpx;
  overflow: hidden;
}
.index-tab {
  display: flex;
}
.index-tab view{
  flex: 1;
  text-align: center;
  padding:10rpx;
  margin: 10rpx;
}
.index-tab .active{
  color: red;
  border-bottom: 1px solid red;
  color: red
}
.index-list {
  display: flex;
  flex-wrap: wrap;
}
.index-list .index-list-item{
  width: 50%;
  margin: 10rpx 0;
  color: hotpink;
}
.index-list .index-list-item image{ 
  width: 90%;
  height: 250rpx;
  margin: 0 auto;
  display: block;
}
.index-list .index-list-text {
  width: 90%;
  display: flex;
  justify-content: space-between;
  margin:0 auto
}
